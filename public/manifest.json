{
  "manifest_version": 3,
  "name": "T&C Summarizer",
  "version": "1.0",
  "description": "Summarize Terms and Conditions",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "scripting", "declarativeContent", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
